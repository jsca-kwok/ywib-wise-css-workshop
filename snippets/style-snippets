h1 {
  color: red;
}

h1 {
  color: blue;
}

/* CSS SPECIFICITY DEMO */
.main-heading {
  color: red;
}

h1 {
  color: blue;
}

/* CSS INHERITANCE DEMO */

.main {
  color: rebeccapurple;
  border: 2px solid #ccc;
  padding: 1em;
}

.special {
  color: black;
  font-weight: bold;
}

/* BOX SIZING DEMO */

.box {
  border: 5px solid rebeccapurple;
  background-color: lightgray;
  padding: 40px;
  margin: 40px;
  width: 300px;
  height: 150px;
}

.alternate {
  box-sizing: border-box;
}
